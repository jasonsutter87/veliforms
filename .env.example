# VeilForms Environment Variables
# Copy this file to .env and fill in your actual values

# JWT Secret - Required for authentication
# Generate a strong random string (minimum 32 characters)
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars

# Stripe API Keys - Required for payments
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Stripe Price IDs - Required for subscription plans
STRIPE_PRICE_PRO=price_your_pro_price_id
STRIPE_PRICE_TEAM=price_your_team_price_id
STRIPE_PRICE_ENTERPRISE=price_your_enterprise_price_id

# Resend API - Required for email notifications
RESEND_API_KEY=re_your_resend_api_key

# CORS Configuration - Required for production
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://veilforms.com,https://www.veilforms.com

# Base URL - Required for email links and webhooks
URL=https://veilforms.com

# GitHub OAuth - Optional for social login
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=https://veilforms.com/api/auth/callback/github

# Google OAuth - Optional for social login
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://veilforms.com/api/auth/callback/google
